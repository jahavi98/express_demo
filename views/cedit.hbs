<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css" rel="stylesheet"
          type="text/css"/>
    <script type="text/javascript"
            src="https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js"></script>
</head>
<br>
<h4>{{{__ "editcat"}}}</h4>
<a class="btn btn-primary" href="/category">{{{__ "allcategory"}}}</a>
<br>
<br>
{{#if errors}}
    {{#each errors}}
        <p class="alert alert-danger">{{this.msg}}</p>
    {{/each}}
{{/if}}
<form action="/category/update/{{category.id}}" method="POST">
    <div class="form-group mb-2">
        <label for="name">{{{__ "category"}}}</label>
        <input type="text" name="name" value="{{category.name}}" class="form-control" id="name">
    </div>
    <div class="form-group mb-2">
        <label for="">{{{__ "status"}}}</label><br>
        <input type="radio" id="active" name="status" value="active">
        <label for="active">Active</label><br>
        <input type="radio" id="deactive" name="status" value="deactive">
        <label for="deactive">DeActive</label>
    </div>
    <div class="form-group mb-2">
        <label for="image">{{{__ "pimg"}}}</label>
        <input type="file" name="image" value="" class="form-control" id="image">
        <img id="blah" src="/images/{{category.image}}"/>
        <br>
        <a class="btn btn-primary" href="#" onclick="myFunction()">Remove</a>
        <script>
            image.onchange = evt => {
                const [file] = image.files
                if (file) {
                    blah.src = URL.createObjectURL(file)
                }
            }

            function myFunction() {
                var myobj = document.getElementById("blah");
                myobj.remove();
            }
        </script>
    </div>
    <div class="form-group mb-2">
        <select name="parent_id" id="category" class="form-control">
            <option value="null">select category</option>
            {{#each allcategory}}
                <option value="{{id}}">
                    {{name}}</option>
            {{/each}}
        </select>
    </div>

    <button type="submit" class="btn btn-primary mb-2">{{{__ "updatecat"}}}</button>
</form>
</html>