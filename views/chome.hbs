<html>
<head>
    <link href="assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/css/style.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />
</head>
<body>

<br>
<h4> {{{__ "allcategory"}}}</h4>
<a class="btn btn-primary" href="/category/ccreate">{{{__ "createcat"}}}</a>
<br>
<br>
{{# if errors }}
    {{# each errors }}
        <p class="alert alert-danger">{{ this.msg }}</p>
    {{/each}}
{{/if}}
<table class="table table-bordered" id="pro" style="width:100%">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">{{{__ "category"}}}</th>
        <th scope="col">{{{__ "status"}}}</th>
        <th scope="col">{{{__ "pimg"}}}</th>
        <th scope="col">{{{__ "act"}}}</th>
    </tr>
    </thead>
    <tbody>
    {{#each data}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.category}}</td>
            <td>{{this.status}}</td>
            <td>
                <img height="100" width="100" src="/images/{{this.image}}"/>
            </td>
            <td>
                <a class="btn btn-success" href="/category/cedit/{{this.id}}">{{{__ "edit"}}}</a><br> <br>
                <a class="btn btn-primary" href="/category/delete/{{this.id}}">{{{__ "dlt"}}}</a><br> <br>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="assets/js/bootstrap.min.js"></script>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="assets/js/dataLoader.js"></script>
<script>
    $(document).ready( function () {
        $('#pro').DataTable()
    });
</script>
</body>
</html>