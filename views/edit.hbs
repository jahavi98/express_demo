<h4>Edit User</h4>
<a class="btn btn-primary" href="/">All Users</a>
<br>
<br>
<form action="/users/update/{{user.id}}" method="POST">
  <div class="form-group mb-2">
    <label for="name">{{{__ "name"}}}</label>
    <input type="text" name="name" value="{{user.name}}" class="form-control" id="name" value="name">
  </div>
  <div class="form-group mb-2">
    <label for="username">{{{__ "uname"}}}</label>
    <input type="text" name="username" value="{{user.username}}" class="form-control" id="username" value="username">
  </div>
  
  <button type="submit" class="btn btn-primary mb-2">{{{__ "upuser"}}}</button>
</form>